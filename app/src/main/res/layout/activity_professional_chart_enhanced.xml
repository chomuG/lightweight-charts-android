<?xml version="1.0" encoding="utf-8"?>
<!-- 증권사급 전문가용 차트 레이아웃 -->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0B0B0B"
    tools:context=".view.ProfessionalChartActivity">

    <!-- 증권사 스타일 상단 바 -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:elevation="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#1C1C1E"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingHorizontal="16dp">

            <!-- 종목명 및 가격 정보 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textStockName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="삼성전자"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textStockCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="005930"
                        android:textColor="#9E9E9E"
                        android:textSize="12sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/textCurrentPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="74,200"
                        android:textColor="#F44336"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textPriceChange"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="▲ 800 (+1.09%)"
                        android:textColor="#F44336"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- 시간봉 선택 (증권사 스타일) -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/timeFrameChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:selectionRequired="true"
                app:singleSelection="true"
                app:chipSpacing="4dp" />

        </LinearLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- 메인 차트 영역 (증권사 스타일 레이아웃) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- 좌측: 차트 영역 (80%) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:orientation="vertical"
            android:background="#0B0B0B">

            <!-- 차트 컨테이너 -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#0B0B0B">

                <com.tradingview.lightweightcharts.view.ChartsView
                    android:id="@+id/chartsView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hardwareAccelerated="true"
                    android:layerType="hardware" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:indeterminateTint="#00BCD4" />

                <!-- 차트 오버레이 정보 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_margin="16dp"
                    android:orientation="vertical"
                    android:background="#AA1C1C1E"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/textChartInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="O: 73,400 H: 74,500 L: 73,200 C: 74,200"
                        android:textColor="#FFFFFF"
                        android:textSize="10sp"
                        android:fontFamily="monospace" />

                    <TextView
                        android:id="@+id/textVolumeInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vol: 12,345,678"
                        android:textColor="#9E9E9E"
                        android:textSize="10sp"
                        android:fontFamily="monospace" />

                </LinearLayout>

            </FrameLayout>

            <!-- 하단: 지표 제어 패널 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:orientation="horizontal"
                android:background="#1C1C1E"
                android:gravity="center_vertical"
                android:paddingHorizontal="16dp">

                <!-- 지표 토글 버튼들 -->
                <com.google.android.material.chip.ChipGroup
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:chipSpacing="4dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSMA"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="SMA"
                        android:textColor="#FF6B35"
                        android:textSize="10sp"
                        app:chipBackgroundColor="#00000000"
                        app:chipStrokeColor="#FF6B35"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipBollinger"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="BB"
                        android:textColor="#FFCC02"
                        android:textSize="10sp"
                        app:chipBackgroundColor="#00000000"
                        app:chipStrokeColor="#FFCC02"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipVolume"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="VOL"
                        android:textColor="#64B5F6"
                        android:textSize="10sp"
                        app:chipBackgroundColor="#00000000"
                        app:chipStrokeColor="#64B5F6"
                        app:chipStrokeWidth="1dp"
                        android:checked="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMACD"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="MACD"
                        android:textColor="#4CAF50"
                        android:textSize="10sp"
                        app:chipBackgroundColor="#00000000"
                        app:chipStrokeColor="#4CAF50"
                        app:chipStrokeWidth="1dp" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipRSI"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:text="RSI"
                        android:textColor="#9013FE"
                        android:textSize="10sp"
                        app:chipBackgroundColor="#00000000"
                        app:chipStrokeColor="#9013FE"
                        app:chipStrokeWidth="1dp" />

                </com.google.android.material.chip.ChipGroup>

                <!-- 새로고침 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonRefresh"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:text="↻"
                    android:textColor="#00BCD4"
                    android:textSize="16sp"
                    android:minWidth="32dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- 우측: 호가창 및 체결내역 (20%) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:orientation="vertical"
            android:background="#1C1C1E"
            android:paddingStart="1dp">

            <!-- 종목 선택 -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/stockChipGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:selectionRequired="true"
                app:singleSelection="true"
                app:chipSpacing="4dp" />

            <!-- 호가창 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.6"
                android:orientation="vertical"
                android:background="#1C1C1E">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="호가"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="#2A2A2A" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/layoutOrderBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="4dp">

                        <!-- 호가 데이터가 동적으로 추가됨 -->

                    </LinearLayout>

                </ScrollView>

            </LinearLayout>

            <!-- 체결내역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.4"
                android:orientation="vertical"
                android:background="#1C1C1E">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="체결"
                    android:textColor="#FFFFFF"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="8dp"
                    android:background="#2A2A2A" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewTrades"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#1C1C1E" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- 지표 설정 패널 (기존 유지, 필요시 표시) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/indicatorSettingsPanel"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="#2B2B43"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- 이동평균선 세부 설정 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="이동평균선 설정"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="5일선"
                        android:textColor="#FF6B35"
                        android:textSize="12sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSma5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="#FF6B35"
                        app:trackTint="#FF6B35" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="20일선"
                        android:textColor="#4ECDC4"
                        android:textSize="12sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSma20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="#4ECDC4"
                        app:trackTint="#4ECDC4" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="60일선"
                        android:textColor="#FFB74D"
                        android:textSize="12sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSma60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="#FFB74D"
                        app:trackTint="#FFB74D" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="120일선"
                        android:textColor="#E1BEE7"
                        android:textSize="12sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSma120"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="#E1BEE7"
                        app:trackTint="#E1BEE7" />

                </LinearLayout>

            </LinearLayout>

            <!-- 보조지표 설정 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp"
                android:text="보조지표 설정"
                android:textColor="#ffffff"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="볼린저 밴드"
                        android:textColor="#FFCC02"
                        android:textSize="12sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchBollingerBands"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="#FFCC02"
                        app:trackTint="#FFCC02" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="RSI (14)"
                        android:textColor="#9013FE"
                        android:textSize="12sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchRsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="#9013FE"
                        app:trackTint="#9013FE" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MACD"
                        android:textColor="#4CAF50"
                        android:textSize="12sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchMacd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="#4CAF50"
                        app:trackTint="#4CAF50" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="거래량"
                        android:textColor="#64B5F6"
                        android:textSize="12sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchVolume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="#64B5F6"
                        app:trackTint="#64B5F6" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>