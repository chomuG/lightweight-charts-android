<?xml version="1.0" encoding="utf-8"?>
<!-- 실제 증권사 스타일 멀티패널 차트 레이아웃 (키움/대신/한투) -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".view.ProfessionalChartActivity">

    <!-- 상단: 종목 정보 및 컨트롤 (2줄 레이아웃) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#1C1C1C"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp">

        <!-- 첫 번째 줄: 종목 선택 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="4dp">

            <!-- 종목 선택 (매우 눈에 띄게) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="▶ 종목:"
                android:textColor="#00BCD4"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginEnd="8dp"
                android:background="#333333"
                android:paddingHorizontal="12dp"
                android:paddingVertical="6dp" />
                
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/stockChipGroup"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                app:selectionRequired="true"
                app:singleSelection="true"
                app:chipSpacing="8dp"
                android:background="#88FFFFFF"
                android:padding="4dp"
                android:elevation="6dp" />

        </LinearLayout>

        <!-- 두 번째 줄: 가격 정보 및 시간봉 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 좌측: 가격 정보 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/textCurrentPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="74,200"
                    android:textColor="#FF4444"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:fontFamily="monospace" />

                <TextView
                    android:id="@+id/textPriceChange"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="▲800(+1.09%)"
                    android:textColor="#FF4444"
                    android:textSize="12sp"
                    android:fontFamily="monospace" />

            </LinearLayout>

            <!-- 우측: 시간봉 및 컨트롤 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 시간봉 선택 -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/timeFrameChipGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:selectionRequired="true"
                    app:singleSelection="true"
                    app:chipSpacing="2dp" />

                <!-- 새로고침 버튼 -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonRefresh"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="↻"
                    android:textColor="#999999"
                    android:textSize="14sp"
                    android:layout_marginStart="8dp"
                    android:minWidth="32dp"
                    android:minHeight="32dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- 메인: 차트 영역 (증권사 스타일 - 멀티패널 풀스크린) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#000000">

        <!-- 1. 메인 캔들차트 패널 (55%) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.55"
            android:background="#000000">

            <com.tradingview.lightweightcharts.view.ChartsView
                android:id="@+id/chartsView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hardwareAccelerated="true"
                android:layerType="hardware"
                android:nestedScrollingEnabled="false"
                android:scrollbars="none"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="#00BCD4" />

            <!-- 차트 정보 오버레이 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:background="#88000000"
                android:padding="4dp">

                <TextView
                    android:id="@+id/textChartInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시가: 73,400  고가: 74,500  저가: 73,200  종가: 74,200"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </FrameLayout>

        <!-- 2. 거래량 차트 패널 (15%) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:background="#000000"
            android:layout_marginTop="1dp">

            <com.tradingview.lightweightcharts.view.ChartsView
                android:id="@+id/volumeChartsView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hardwareAccelerated="true"
                android:layerType="hardware"
                android:nestedScrollingEnabled="false"
                android:scrollbars="none"
                android:focusable="false"
                android:clickable="false" />

            <!-- 거래량 라벨 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="4dp"
                android:text="거래량"
                android:textColor="#64B5F6"
                android:textSize="10sp"
                android:textStyle="bold" />

        </FrameLayout>

        <!-- 3. MACD 차트 패널 (15%) -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.15"
            android:background="#000000"
            android:layout_marginTop="1dp">

                <com.tradingview.lightweightcharts.view.ChartsView
                    android:id="@+id/macdChartsView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hardwareAccelerated="true"
                    android:layerType="hardware"
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="none"
                    android:focusable="false"
                    android:clickable="false" />

                <!-- MACD 라벨 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_margin="4dp"
                    android:text="MACD"
                    android:textColor="#4CAF50"
                    android:textSize="10sp"
                    android:textStyle="bold" />

            </FrameLayout>

            <!-- 4. RSI 차트 패널 (15%) -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.15"
                android:background="#000000"
                android:layout_marginTop="1dp">

                <com.tradingview.lightweightcharts.view.ChartsView
                    android:id="@+id/rsiChartsView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hardwareAccelerated="true"
                    android:layerType="hardware"
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="none"
                    android:focusable="false"
                    android:clickable="false" />

                <!-- RSI 라벨 -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|start"
                    android:layout_margin="4dp"
                    android:text="RSI"
                    android:textColor="#9013FE"
                    android:textSize="10sp"
                    android:textStyle="bold" />

                <!-- RSI 기준선 표시 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|end"
                    android:layout_margin="4dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="70"
                        android:textColor="#FF6B6B"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" | "
                        android:textColor="#666666"
                        android:textSize="8sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="30"
                        android:textColor="#4ECDC4"
                        android:textSize="8sp" />

                </LinearLayout>

            </FrameLayout>

    </LinearLayout>

    <!-- 하단: 지표 컨트롤 패널 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:background="#1C1C1C"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp">

        <!-- 지표 토글 버튼들 -->
        <CheckBox
            android:id="@+id/checkSMA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이평선"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:checked="true"
            android:buttonTint="#FF6B35" />

        <CheckBox
            android:id="@+id/checkBollinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="볼밴"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:buttonTint="#FFCC02" />

        <CheckBox
            android:id="@+id/checkVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="거래량"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:checked="true"
            android:buttonTint="#64B5F6" />

        <CheckBox
            android:id="@+id/checkMACD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="MACD"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:buttonTint="#4CAF50" />

        <CheckBox
            android:id="@+id/checkRSI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="RSI"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:buttonTint="#9013FE" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- 지표 설정 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonIndicatorSettings"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="설정"
            android:textColor="#999999"
            android:textSize="10sp"
            android:minWidth="48dp"
            android:insetTop="0dp"
            android:insetBottom="0dp" />

    </LinearLayout>

    <!-- 숨겨진 지표 설정 패널 -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/indicatorSettingsPanel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="8dp"
        android:visibility="gone"
        app:cardBackgroundColor="#2B2B43"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 이동평균선 세부 설정 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="이동평균선"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="5일선"
                        android:textColor="#FF6B35"
                        android:textSize="10sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSma5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="#FF6B35"
                        app:trackTint="#FF6B35" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="20일선"
                        android:textColor="#4ECDC4"
                        android:textSize="10sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSma20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="#4ECDC4"
                        app:trackTint="#4ECDC4" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="60일선"
                        android:textColor="#FFB74D"
                        android:textSize="10sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSma60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="#FFB74D"
                        app:trackTint="#FFB74D" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="120일선"
                        android:textColor="#E1BEE7"
                        android:textSize="10sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSma120"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="#E1BEE7"
                        app:trackTint="#E1BEE7" />

                </LinearLayout>

            </LinearLayout>

            <!-- 보조지표 설정 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:text="보조지표"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="볼린저 밴드"
                        android:textColor="#FFCC02"
                        android:textSize="10sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchBollingerBands"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="#FFCC02"
                        app:trackTint="#FFCC02" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="RSI (14)"
                        android:textColor="#9013FE"
                        android:textSize="10sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchRsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="#9013FE"
                        app:trackTint="#9013FE" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MACD"
                        android:textColor="#4CAF50"
                        android:textSize="10sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchMacd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="#4CAF50"
                        app:trackTint="#4CAF50" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="거래량"
                        android:textColor="#64B5F6"
                        android:textSize="10sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchVolume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="#64B5F6"
                        app:trackTint="#64B5F6" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>