<?xml version="1.0" encoding="utf-8"?>
<!-- 실제 증권사(키움/대신/한투 등) 스타일 차트 레이아웃 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".view.ProfessionalChartActivity">

    <!-- 상단: 종목 정보 및 컨트롤 (실제 증권사 스타일) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:background="#1C1C1C"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp">

        <!-- 좌측: 종목 정보 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 종목 선택 드롭다운 (증권사 스타일) -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/stockChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:selectionRequired="true"
                app:singleSelection="true"
                app:chipSpacing="2dp" />

            <TextView
                android:id="@+id/textCurrentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="74,200"
                android:textColor="#FF4444"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/textPriceChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="▲800(+1.09%)"
                android:textColor="#FF4444"
                android:textSize="12sp"
                android:fontFamily="monospace" />

        </LinearLayout>

        <!-- 우측: 시간봉 및 컨트롤 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 시간봉 선택 (증권사 스타일: 작은 버튼들) -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/timeFrameChipGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:selectionRequired="true"
                app:singleSelection="true"
                app:chipSpacing="2dp" />

            <!-- 새로고침 버튼 -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/buttonRefresh"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:text="↻"
                android:textColor="#999999"
                android:textSize="14sp"
                android:layout_marginStart="8dp"
                android:minWidth="32dp"
                android:minHeight="32dp"
                android:insetTop="0dp"
                android:insetBottom="0dp" />

        </LinearLayout>

    </LinearLayout>

    <!-- 메인: 차트 영역 (실제 증권사 스타일 - 단일 차트에 모든 지표 오버레이) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <!-- 좌측: 메인 차트 (85%) -->
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:background="#000000">

            <com.tradingview.lightweightcharts.view.ChartsView
                android:id="@+id/chartsView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hardwareAccelerated="true"
                android:layerType="hardware" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="#00BCD4" />

            <!-- 차트 정보 오버레이 (실제 증권사 스타일) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_margin="8dp"
                android:orientation="vertical"
                android:background="#88000000"
                android:padding="4dp">

                <TextView
                    android:id="@+id/textChartInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="시가: 73,400  고가: 74,500  저가: 73,200  종가: 74,200"
                    android:textColor="#FFFFFF"
                    android:textSize="9sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:id="@+id/textVolumeInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="거래량: 12,345,678주"
                    android:textColor="#CCCCCC"
                    android:textSize="9sp"
                    android:fontFamily="monospace" />

            </LinearLayout>

        </FrameLayout>

        <!-- 우측: 호가창 (15%) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"
            android:orientation="vertical"
            android:background="#1C1C1C">

            <!-- 호가창 헤더 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal"
                android:background="#2C2C2C"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="매도호가"
                    android:textColor="#FFFFFF"
                    android:textSize="8sp"
                    android:gravity="center"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="매수호가"
                    android:textColor="#FFFFFF"
                    android:textSize="8sp"
                    android:gravity="center"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- 호가 데이터 (실제 증권사 스타일) -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7">

                <LinearLayout
                    android:id="@+id/layoutOrderBook"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 예시 호가 데이터 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="74,500"
                            android:textColor="#4444FF"
                            android:textSize="8sp"
                            android:gravity="center"
                            android:background="#001122"
                            android:fontFamily="monospace" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:text="74,200"
                            android:textColor="#FF4444"
                            android:textSize="8sp"
                            android:gravity="center"
                            android:background="#220011"
                            android:fontFamily="monospace" />

                    </LinearLayout>

                    <!-- 더 많은 호가 데이터들... -->

                </LinearLayout>

            </ScrollView>

            <!-- 체결내역 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:text="체결내역"
                    android:textColor="#FFFFFF"
                    android:textSize="8sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:background="#2C2C2C" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewTrades"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="#1C1C1C" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <!-- 하단: 지표 컨트롤 패널 (실제 증권사 스타일 - 간단하고 컴팩트) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:background="#1C1C1C"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp">

        <!-- 지표 토글 버튼들 (실제 증권사 스타일) -->
        <CheckBox
            android:id="@+id/checkSMA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이평선"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:checked="true"
            android:buttonTint="#FF6B35" />

        <CheckBox
            android:id="@+id/checkBollinger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="볼밴"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:buttonTint="#FFCC02" />

        <CheckBox
            android:id="@+id/checkVolume"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="거래량"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:checked="true"
            android:buttonTint="#64B5F6" />

        <CheckBox
            android:id="@+id/checkMACD"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="MACD"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:buttonTint="#4CAF50" />

        <CheckBox
            android:id="@+id/checkRSI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="RSI"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            android:buttonTint="#9013FE" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

        <!-- 지표 설정 버튼 -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonIndicatorSettings"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:text="설정"
            android:textColor="#999999"
            android:textSize="10sp"
            android:minWidth="48dp"
            android:insetTop="0dp"
            android:insetBottom="0dp" />

    </LinearLayout>

    <!-- 숨겨진 지표 설정 패널 (팝업 형태) -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/indicatorSettingsPanel"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="8dp"
        android:visibility="gone"
        app:cardBackgroundColor="#2B2B43"
        app:cardCornerRadius="4dp"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- 이동평균선 세부 설정 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="이동평균선"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="5일선"
                        android:textColor="#FF6B35"
                        android:textSize="10sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSma5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="#FF6B35"
                        app:trackTint="#FF6B35" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="20일선"
                        android:textColor="#4ECDC4"
                        android:textSize="10sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSma20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="#4ECDC4"
                        app:trackTint="#4ECDC4" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="60일선"
                        android:textColor="#FFB74D"
                        android:textSize="10sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSma60"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="#FFB74D"
                        app:trackTint="#FFB74D" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="120일선"
                        android:textColor="#E1BEE7"
                        android:textSize="10sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSma120"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="#E1BEE7"
                        app:trackTint="#E1BEE7" />

                </LinearLayout>

            </LinearLayout>

            <!-- 보조지표 설정 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="8dp"
                android:text="보조지표"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="볼린저 밴드"
                        android:textColor="#FFCC02"
                        android:textSize="10sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchBollingerBands"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="#FFCC02"
                        app:trackTint="#FFCC02" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="RSI (14)"
                        android:textColor="#9013FE"
                        android:textSize="10sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchRsi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="#9013FE"
                        app:trackTint="#9013FE" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MACD"
                        android:textColor="#4CAF50"
                        android:textSize="10sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchMacd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="false"
                        app:thumbTint="#4CAF50"
                        app:trackTint="#4CAF50" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="거래량"
                        android:textColor="#64B5F6"
                        android:textSize="10sp" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchVolume"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        app:thumbTint="#64B5F6"
                        app:trackTint="#64B5F6" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>